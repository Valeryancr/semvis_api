# ===========================================
# ARCHIVO DE EJEMPLO DE VARIABLES DE ENTORNO
# ===========================================
# Copia este archivo como .env y configura tus valores reales
# NUNCA subas el archivo .env a GitHub

# ===========================================
# PERFIL DE SPRING
# ===========================================
SPRING_PROFILES_ACTIVE=dev
# Opciones: dev, prod

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/seminario
SPRING_DATASOURCE_USERNAME=tu_usuario
SPRING_DATASOURCE_PASSWORD=tu_password_seguro

# Pool de conexiones
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_IDLE_MS=60000
DB_CONN_TIMEOUT_MS=30000

# ===========================================
# SEGURIDAD JWT
# ===========================================
# Genera una clave segura con: openssl rand -base64 32
JWT_SECRET=tu_clave_jwt_super_secreta_aqui
JWT_EXP_MINUTES=120

# ===========================================
# CORS (URLs permitidas)
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://127.0.0.1:4200

# ===========================================
# CONFIGURACIÓN DE EMAIL (Brevo)
# ===========================================
BREVO_API_KEY=tu_api_key_de_brevo
BREVO_SENDER_NAME=SkyNet S.A.
BREVO_SENDER_EMAIL=no-reply@semvis-skynet.com

# ===========================================
# URLs DE LA APLICACIÓN
# ===========================================
RESET_LINK_BASE_URL=http://localhost:4200/auth/reset-password
LOGIN_BASE_URL=http://localhost:4200/auth/login
REPORT_BASE_URL=http://localhost:8080/api/reportes/open/secure?token=

# ===========================================
# PUERTO DEL SERVIDOR
# ===========================================
PORT=8080

# ===========================================
# LOGGING (Opcional)
# ===========================================
LOG_SQL=false
LOG_SQL_BIND=false
LOG_SECURITY=false
